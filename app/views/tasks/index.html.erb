<h1>My Tasks</h1>

  <% @tasks.each do |task| %>
<p>
  <%= check_box_tag :completed, "completed", task.completed, disabled: true %>
  <%= link_to task.title, task_path(task) %>
  <%= link_to "|Delete|", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
</p>
  <% end %>

<br>
<br>
<br>
<p><%= link_to "+Add a new task", "tasks/new" %></p>
